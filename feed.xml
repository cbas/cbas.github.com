---
layout: nil
---
<?xml version="1.0"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>The Blog of Sebastiaan Deckers</title>
  <link href="{{site.url}}{{site.baseurl}}"/>
  <link type="application/atom+xml" rel="self" href="{{site.url}}{{site.baseurl}}feed.xml"/>
  <updated>{{site.time | date_to_xmlschema}}</updated>
  <id>{{site.url}}{{site.baseurl}}</id>
  <author>
    <name>Sebastiaan Deckers</name>
    <email>seb@ninja.sg</email>
  </author>
  {% for item in site.categories.articles limit:50 offset:0 %}
  <entry>
    <id>{{site.url}}{{item.url}}</id>
    <link type="text/html" rel="alternate" href="{{site.url}}{{item.url}}"/>
    <title>{{item.title}}</title>
    <published>{{item.date | date_to_xmlschema}}</published>
    <updated>{{item.date | date_to_xmlschema}}</updated>
    <author>
      <name>{{item.author}}</name>
      <uri>mailto:{{item.author_email}}</uri>
    </author>
    <content type="html">{{item.content | xml_escape}}</content>
  </entry>
  {% endfor %}
</feed>